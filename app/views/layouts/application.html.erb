<!DOCTYPE html>
<html>
  <head>
    <title>BooksIntro</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.css">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <header class="header">
      <div class="main-header">
        <%= link_to 'BOOKs Intro', root_path, class: "title" %>
      <ul class='hed_lists'>
      <% if user_signed_in? %>
      <div class="login_name">
      <li><%= link_to current_user.nickname, "#", class: "user-nickname" %> </li>
      </div>
      <div class="logout_button">
      <li><%= link_to 'ログアウト', destroy_user_session_path , data: {turbo_method: :delete}, class: "logout" %> </li>
      </div>
         </ul>
      <% else %>

      <% end %>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
